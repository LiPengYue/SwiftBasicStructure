
 platform :ios, '9.0'
#source 'https://cdn.cocoapods.org/'

target 'SwiftBasicStructure' do
  use_frameworks!

      pod 'YYKit', '1.0.9'                                   # iOS 组件
      pod 'MJRefresh', '3.2.0'                            # 上下拉刷新
      pod 'Kingfisher', '4.10.1'                           # 图片下载缓存转码等
      pod 'Alamofire', '4.8.1'                              # 网络请求
      pod 'ObjectMapper', '3.4.2'                       # 模型对象 json转换
      pod 'SwiftyJSON', '4.2.0'                          # json 解析
      pod 'SnapKit', '4.2.0'                                 # UI布局组件
      pod 'ReachabilitySwift', '4.3.0'                 # 网络连接性检查
      pod 'TZImagePickerController', :git => 'https://github.com/FeSn/TZImagePickerController.git' # 视频.图片选择框架
      pod 'IQKeyboardManagerSwift', '6.5.1'     # 自动调整视图 避免键盘遮挡
      pod 'XCGLogger'                                      # 日志输出
      pod 'PYTransitionAnimater'
      pod 'DatePickerDialog'
      pod 'iOS-Echarts'                               # 图表
      pod 'RealmSwift', '3.19.0'                                   # 本地数据库
      pod 'WechatOpenSDK', '1.8.2'            # 微信
      pod 'AlipaySDK-iOS', '15.5.9'            # 支付宝
      pod 'SKPhotoBrowser', '6.1.0'               # 图片浏览器
end
