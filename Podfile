
 platform :ios, '9.0'
source 'https://cdn.cocoapods.org/'

target 'SwiftBasicStructure' do
  use_frameworks!

  # iOS 组件
      pod 'YYKit', '1.0.9'
      
      pod 'RxSwift', '~> 5'
      pod 'RxCocoa', '~> 5'
      
      # 上下拉刷新
      pod 'MJRefresh', '3.2.0'
      # 图片下载缓存转码等
      pod 'Kingfisher', '4.10.1'
      # 网络请求
      pod 'Alamofire', '~> 5.1'
      # 模型对象 json转换
      pod 'ObjectMapper', '~> 3.5'
      # UI布局组件
      pod 'SnapKit', '~> 5.0.0'
      # 网络连接性检查
      pod 'ReachabilitySwift', '4.3.0'
      # 视频.图片选择框架
      pod 'TZImagePickerController', :git => 'https://github.com/FeSn/TZImagePickerController.git'
      # 自动调整视图 避免键盘遮挡
      pod 'IQKeyboardManagerSwift', '6.5.1'
      # 日志输出
      pod 'XCGLogger', '~> 7.0.1'
      pod 'PYTransitionAnimater'
      pod 'DatePickerDialog'
      # 图表
      pod 'iOS-Echarts'
      # 本地数据库
      pod 'RealmSwift', '3.19.0'
      # 微信
      pod 'WechatOpenSDK', '1.8.2'
      # 支付宝
      pod 'AlipaySDK-iOS', '15.5.9'
      # 图片浏览器
      pod 'SKPhotoBrowser', '6.1.0'
end
